{
    "name": "Oppie.xyz Dev",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        },
        "ghcr.io/devcontainers/features/php:1": {
            "version": "latest"
        }
    },
    "forwardPorts": [8000, 8080],
    "customizations": {
        "vscode": {
            "extensions": [
            ]
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y php-cli && npm install -g http-server && npm install",
} 