{
    "name": "Oppie.xyz Dev",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        },
        "ghcr.io/devcontainers/features/php:1": {
            "version": "latest"
        }
    },
    "forwardPorts": [8000, 8080],
    "customizations": {
        "vscode": {
            "extensions": [
            ]
        }
    },
    "runArgs": [
        "--device=/dev/dri:/dev/dri",
        "--group-add=video"
    ],
    "mounts": [
        "source=/dev/dri,target=/dev/dri,type=bind"
    ],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y php-cli mesa-vulkan-drivers vulkan-tools && npm init -y && npm install -g http-server && npm install && npm install -g @huggingface/transformers",
    "remoteUser": "vscode"
} 